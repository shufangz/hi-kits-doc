$accentColor = #42b983//默认主题颜色
$borderColor = #d9d9d9//默认边框颜色
.navbar .logo {
    height: 2.2rem;
    min-width: 2.2rem;
    margin-right: 0.8rem;
    vertical-align: top;
    border-radius: 0%;
}
.footer-wrapper{
    padding: 1.5rem 2.5rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    color: #5b5b5b;
    display: none;
}
.page .theme-reco-content h3 {
    position: relative;
    padding-left: 0.8rem;
}
.page .theme-reco-content h3:before {
    position: absolute;
    left: 0;
    top: 3.5rem;
    display: block;
    height: 1.8rem;
    content: "";
    border-left: 5px solid #3eaf7c;
}

 
table {
    display: table !important;
    width: 100%;
    font-size: 14px;
    line-height:2;
    font-family: SFMono-Regular,Consolas,Liberation Mono,Menlo,Courier,monospace;
    border-width: 0;
    margin: 2em 0;
    border-collapse: collapse;
    border-spacing: 0;
    empty-cells: show;
    border: 1px solid #ebedf0;
}

table td:nth-child(1) {
    width:25%;
}
table td:nth-child(2) {
    width:30%;
}
table td:nth-child(3) {
    width:18%;
}
table td:nth-child(4) {
    width:25%;
}

table td:nth-child(3) code {
    color: #c41d7f !important;
    font-size: 13px;
    word-break: break-all;
}
table td:nth-child(1) code {
    color: #000 !important;
    font-weight: 500;
    font-size: 13px;
    word-break: break-all;
}
.navbar .site-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: #2c3e50;
    position: relative;
    display: none;
}
.page-title .iconfont{
    color:  #42b983;
}
.leancloud-visitors-count {
    color:  #42b983 !important;
}
.tag-item {
    color: green;
    font-size: 12px;
    border: solid 1px rgba(174, 109, 76, 0.38);
    border-radius: 5px;
    padding: 2px 8px;
}